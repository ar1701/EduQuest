<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap");

        *,
        *::before,
        *::after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ff8c6b;
            padding: 2rem;
        }

        .container {
            position: relative;
            max-width: 1200px;
            width: 100%;
            background: #fff;
            border-radius: 2rem;
            box-shadow: 0 60px 40px -30px rgba(0, 0, 0, 0.27);
            display: flex;
        }

        .form-section {
            width: 50%;
            padding: 2rem;
        }

        .form-section header {
            font-size: 2rem;
            font-weight: 600;
            color: #151111;
            text-align: center;
            margin-bottom: 2rem;
        }

        .form .input-box {
            margin-bottom: 1.5rem;
        }

        .input-box label {
            color: #151111;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: block;
        }

        .input-box input,
        .select-box select {
            position: relative;
            height: 50px;
            width: 100%;
            outline: none;
            border: 1px solid #ddd;
            border-radius: 0.8rem;
            padding: 0 1rem;
            background: none;
            font-size: 0.95rem;
            color: #151111;
            transition: all 0.3s ease;
        }

        .input-box input:focus,
        .select-box select:focus {
            border-color: #8371fd;
        }

        .column {
            display: flex;
            column-gap: 1.5rem;
        }

        .gender-box {
            margin-bottom: 1.5rem;
        }

        .gender-box h3 {
            font-size: 1rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .gender-option {
            display: flex;
            gap: 2.5rem;
        }

        .gender {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .address {
            margin-bottom: 1.5rem;
        }

        .select-box select {
            width: 100%;
            cursor: pointer;
        }

        button {
            width: 100%;
            height: 50px;
            background: #151111;
            color: #fff;
            border: none;
            border-radius: 0.8rem;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: 0.3s;
        }

        button:hover {
            background: #8371fd;
        }

        /* Carousel Styles */
        .carousel {
            width: 50%;
            background-color: #ffe0d2;
            border-radius: 0 2rem 2rem 0;
            padding: 2rem;
            display: grid;
            grid-template-rows: 1fr auto;
            overflow: hidden;
        }

        .images-wrapper {
            position: relative;
            width: 100%;
            height: 400px;
            overflow: hidden;
        }

        .image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.3s, transform 0.5s;
        }

        .image.show {
            opacity: 1;
            transform: none;
        }

        .text-slider {
            text-align: center;
            margin-top: 2rem;
        }

        .text-wrap {
            height: 2.2rem;
            overflow: hidden;
            margin-bottom: 2.5rem;
        }

        .text-group {
            transform: translateY(0);
            transition: 0.5s;
        }

        .text-group h2 {
            line-height: 2.2rem;
            font-weight: 600;
            font-size: 1.6rem;
            color: #151111;
        }

        .bullets {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .bullets span {
            width: 0.5rem;
            height: 0.5rem;
            background-color: #aaa;
            border-radius: 50%;
            cursor: pointer;
            transition: 0.3s;
        }

        .bullets span.active {
            width: 1.1rem;
            background-color: #151111;
            border-radius: 1rem;
        }

        @media screen and (max-width: 900px) {
            .container {
                flex-direction: column;
            }

            .form-section,
            .carousel {
                width: 100%;
            }

            .carousel {
                border-radius: 0 0 2rem 2rem;
            }

            .images-wrapper {
                height: 300px;
            }

            body {
                padding: 1rem;
            }
        }

        @media screen and (max-width: 500px) {
            .column {
                flex-direction: column;
                gap: 1rem;
            }

            .form-section {
                padding: 1rem;
            }

            .images-wrapper {
                height: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <header>Welcome User</header>
            <form action="#" class="form">
                <div class="input-box">
                    <label>User Name</label>
                    <input name = "username" type="text" placeholder="Enter user name" required />
                </div>
                <div class="input-box">
                    <label>Name</label>
                    <input name = "name" type="text" placeholder="Enter full name" required />
                </div>
                <div class="input-box">
                    <label>Email Address</label>
                    <input name = "email" type="email" placeholder="Enter email address" required />
                </div>
                <div class="column">
                    <div class="input-box">
                        <label>Phone Number</label>
                        <input name = "phone" type="number" placeholder="Enter phone number" required />
                    </div>
                </div>
                <div class="gender-box">
                    <h3>Your Designation</h3>
                    <div class="gender-option">
                        <div class="gender">
                            <input name = "designation" type="radio" id="check-student" name="designation" checked />
                            <label for="check-student">Student</label>
                        </div>
                        <div class="gender">
                            <input name = "designation" type="radio" id="check-faculty" name="designation" />
                            <label for="check-faculty">Faculty</label>
                        </div>
                    </div>
                </div>
                <div class="input-box address">
                  <label>Department</label>
                  <div class="column">
                      <div class="select-box">
                          <select name="department" required>
                              <option value="">Select your department</option>
                              <option value="engineering">School Of Engineering</option>
                              <option value="computer_applications">Dept. Of Computer Applications</option>
                              <option value="biotechnology">Dept. Of Bio-Technology</option>
                              <option value="ship_technology">Dept. Of Ship Technology</option>
                              <option value="ship_instrumentation">Dept. Of Ship Instrumentation</option>
                              <option value="legal_studies">School of Legal Studies</option>
                              <option value="business_studies">Center For Business Studies</option>
                          </select>
                      </div>
                  </div>
              </div>
                <div class="input-box">
                    <label>Password</label>
                    <input name = "password" type="password" placeholder="Enter password" required />
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div class="carousel">
            <div class="images-wrapper">
                <img src="/api/placeholder/500/400" class="image img-1 show" alt="Image 1">
                <img src="/api/placeholder/500/400" class="image img-2" alt="Image 2">
                <img src="/api/placeholder/500/400" class="image img-3" alt="Image 3">
            </div>

            <div class="text-slider">
                <div class="text-wrap">
                    <div class="text-group">
                        <h2>Create your own courses</h2>
                    </div>
                </div>

                <div class="bullets">
                    <span class="active" data-value="1"></span>
                    <span data-value="2"></span>
                    <span data-value="3"></span>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Select carousel elements
        const bullets = document.querySelectorAll(".bullets span");
        const images = document.querySelectorAll(".image");
        const textGroup = document.querySelector(".text-group");

        // Content for text slider
        const texts = [
            "Create your own courses",
            "Customize as you like",
            "Invite students to your class"
        ];

        // Function to update carousel
        const updateCarousel = (index) => {
            // Update bullets
            bullets.forEach(bullet => bullet.classList.remove("active"));
            bullets[index].classList.add("active");

            // Update images
            images.forEach(img => img.classList.remove("show"));
            images[index].classList.add("show");

            // Update text
            textGroup.innerHTML = `<h2>${texts[index]}</h2>`;
        };

        // Add click events to bullets
        bullets.forEach((bullet, index) => {
            bullet.addEventListener("click", () => {
                updateCarousel(index);
            });
        });

        // Auto slide functionality
        let currentIndex = 0;
        setInterval(() => {
            currentIndex = (currentIndex + 1) % bullets.length;
            updateCarousel(currentIndex);
        }, 5000);
    </script>
</body>
</html>
