<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap");

        *,
        *::before,
        *::after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ff8c6b;
            padding: 2rem;
        }

        .container {
            position: relative;
            max-width: 1200px;
            width: 100%;
            background: #fff;
            border-radius: 3.3rem;
            box-shadow: 0 60px 40px -30px rgba(0, 0, 0, 0.27);
            display: flex;
            overflow: hidden;
        }

        .inner-box {
            position: relative;
            width: calc(100% - 4.1rem);
            margin: 2rem auto;
            height: calc(100% - 4.1rem);
            display: flex;
        }

        .form-section {
            width: 50%;
            padding: 2rem 3rem;
            transition: transform 0.8s ease-in-out, opacity 0.45s linear;
        }

        .form-section header {
            font-size: 2rem;
            font-weight: 600;
            color: #151111;
            text-align: center;
            margin: 2rem 0;
        }

       /* Add these updated styles to fix the form layout and button positioning */

.form-section {
    width: 50%;
    padding: 2rem 3rem;
    transition: transform 0.8s ease-in-out, opacity 0.45s linear;
    display: flex;
    flex-direction: column;
    max-height: 100%;
    overflow-y: auto;
}

.form {
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.input-box {
    position: relative;
    margin-bottom: 0.5rem;
}

.input-box.address {
    margin: 0.5rem 0;
}

.gender-box {
    margin: 0.5rem 0;
}

button {
    width: 100%;
    height: 50px;
    background: #151111;
    color: #fff;
    border: none;
    border-radius: 0.8rem;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    margin: 1rem 0;
    transition: 0.3s;
    transform: translateY(0);
}

.form-section header {
    font-size: 2rem;
    font-weight: 600;
    color: #151111;
    text-align: center;
    margin: 1rem 0;
}

@media screen and (max-width: 900px) {
    .form-section {
        padding: 1rem 2rem;
        width: 100%;
        overflow-y: visible;
    }
    
    .form {
        gap: 0.3rem;
    }
}

@media screen and (max-width: 500px) {
    .form-section {
        padding: 1rem;
    }
}
        .input-box input,
        .select-box select {
            position: relative;
            height: 50px;
            width: 100%;
            outline: none;
            border: 1px solid #ddd;
            border-radius: 0.8rem;
            padding: 0 1rem;
            background: none;
            font-size: 0.95rem;
            color: #151111;
            transition: all 0.3s ease;
        }

        .input-box input:focus,
        .select-box select:focus {
            border-color: #8371fd;
        }

        .column {
            display: flex;
            column-gap: 1.5rem;
        }

        .gender-box {
            margin: 2rem 0;
        }

        .gender-box h3 {
            font-size: 1rem;
            font-weight: 500;
            margin-bottom: 0.8rem;
        }

        .gender-option {
            display: flex;
            gap: 2.5rem;
            margin-top: 0.5rem;
        }

        .gender {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .address {
            margin: 2rem 0;
        }

        .select-box select {
            width: 100%;
            cursor: pointer;
        }

        button {
            width: 100%;
            height: 50px;
            background: #151111;
            color: #fff;
            border: none;
            border-radius: 0.8rem;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            margin-top: 1rem;
            transition: 0.3s;
            transform: translateY(0);
        }

        button:hover {
            background: #8371fd;
            transform: translateY(-2px);
        }

        /* Carousel Styles */
        .carousel {
            width: 50%;
            background-color: #ffe0d2;
            border-radius: 2rem;
            padding: 2rem;
            display: grid;
            grid-template-rows: 1fr auto;
            overflow: hidden;
            transition: transform 0.8s ease-in-out;
        }

        .images-wrapper {
            position: relative;
            width: 100%;
            height: 600px;
            overflow: hidden;
            border-radius: 1rem;
        }

        .image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.3s ease-in-out, transform 0.5s ease-in-out;
            transform: scale(1.1);
        }

        .image.show {
            opacity: 1;
            transform: scale(1);
        }

        .text-slider {
            text-align: center;
            margin-top: 2rem;
            padding: 0 1rem;
        }

        .text-wrap {
            height: 2.2rem;
            overflow: hidden;
            margin-bottom: 2.5rem;
        }

        .text-group {
            transform: translateY(0);
            transition: 0.5s ease-in-out;
        }

        .text-group h2 {
            line-height: 2.2rem;
            font-weight: 600;
            font-size: 1.6rem;
            color: #151111;
        }

        .bullets {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .bullets span {
            width: 0.5rem;
            height: 0.5rem;
            background-color: #aaa;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .bullets span.active {
            width: 1.1rem;
            background-color: #151111;
            border-radius: 1rem;
        }

        @media screen and (max-width: 900px) {
            .container {
                flex-direction: column;
                height: auto;
                max-width: 550px;
            }

            .inner-box {
                position: static;
                transform: none;
                width: revert;
                height: revert;
                padding: 2rem;
            }

            .form-section,
            .carousel {
                width: 100%;
                transition: transform 0.8s ease-in-out;
            }

            .form-section {
                padding: 0.5rem 0.2rem 1rem;
            }

            .carousel {
                border-radius: 2rem;
                padding: 3rem 2rem;
            }

            .images-wrapper {
                height: 300px;
            }

            body {
                padding: 1rem;
            }
        }

        @media screen and (max-width: 500px) {
            .column {
                flex-direction: column;
                gap: 1rem;
            }

            .inner-box {
                padding: 1rem;
            }

            .form-section {
                padding: 1rem;
            }

            .carousel {
                padding: 1.5rem 1rem;
            }

            .images-wrapper {
                height: 200px;
            }

            .text-group h2 {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Rest of the HTML remains the same -->
    <div class="container">
        <div class="inner-box">
            <div class="form-section">
                <header>Sign Up</header>
                <form action="#" class="form">
                    <div class="input-box">
                        <label>User Name</label>
                        <input type="text" name="username" placeholder="Enter user name" required />
                    </div>
                    <div class="input-box">
                        <label>Name</label>
                        <input type="text" name="fullname" placeholder="Enter full name" required />
                    </div>
                    <div class="input-box">
                        <label>Email Address</label>
                        <input type="email" name="email" placeholder="Enter email address" required />
                    </div>
                    <div class="column">
                        <div class="input-box">
                            <label>Phone Number</label>
                            <input type="number" name="phone" placeholder="Enter phone number" required />
                        </div>
                    </div>
                    <div class="gender-box">
                        <h3>Your Designation</h3>
                        <div class="gender-option">
                            <div class="gender">
                                <input type="radio" id="check-student" name="designation" value="student" checked />
                                <label for="check-student">Student</label>
                            </div>
                            <div class="gender">
                                <input type="radio" id="check-faculty" name="designation" value="faculty" />
                                <label for="check-faculty">Faculty</label>
                            </div>
                        </div>
                    </div>
                    <div class="input-box address">
                        <label>Department</label>
                        <div class="column">
                            <div class="select-box">
                                <select name="department" required>
                                    <option value="">Select your department</option>
                                    <option value="engineering">School Of Engineering</option>
                                    <option value="computer_applications">Dept. Of Computer Applications</option>
                                    <option value="biotechnology">Dept. Of Bio-Technology</option>
                                    <option value="ship_technology">Dept. Of Ship Technology</option>
                                    <option value="ship_instrumentation">Dept. Of Ship Instrumentation</option>
                                    <option value="legal_studies">School of Legal Studies</option>
                                    <option value="business_studies">Center For Business Studies</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="input-box">
                        <label>Password</label>
                        <input type="password" name="password" placeholder="Enter password" required />
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>

            <!-- Carousel part remains the same -->
            <div class="carousel">
                <div class="images-wrapper">
                    <img src="https://cdn.create.vista.com/api/media/small/316886424/stock-photo-portrait-of-confident-millennial-african-american-businessman-sitting-in-office" class="image img-1 show" alt="Image 1">
                    <img src="https://media.istockphoto.com/id/863497498/photo/i-need-everyone-to-give-me-their-best-ideas.jpg?s=612x612&w=0&k=20&c=NtuxU9998bWMDsZN8QB0Ox-5AlpQ7NoifOhbuXQWcpo=" class="image img-2" alt="Image 2">
                    <img src="https://www.shutterstock.com/image-photo/team-diverse-partners-mature-latin-600nw-2346448085.jpg" class="image img-3" alt="Image 3">
                </div>

                <div class="text-slider">
                    <div class="text-wrap">
                        <div class="text-group">
                            <h2>Manage Placements Opportunities</h2>
                        </div>
                    </div>

                    <div class="bullets">
                        <span class="active" data-value="1"></span>
                        <span data-value="2"></span>
                        <span data-value="3"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript remains the same -->
    <script>
        // Previous JavaScript code remains the same
        const bullets = document.querySelectorAll(".bullets span");
        const images = document.querySelectorAll(".image");
        const textGroup = document.querySelector(".text-group");

        const texts = [
    "Manage Placements Opportunities",
    "Track student applications",
    "Connect students with Companies"
];


        const updateCarousel = (index) => {
            bullets.forEach(bullet => bullet.classList.remove("active"));
            bullets[index].classList.add("active");

            images.forEach(img => img.classList.remove("show"));
            images[index].classList.add("show");

            textGroup.innerHTML = `<h2>${texts[index]}</h2>`;
        };

        bullets.forEach((bullet, index) => {
            bullet.addEventListener("click", () => {
                updateCarousel(index);
            });
        });

        let currentIndex = 0;
        setInterval(() => {
            currentIndex = (currentIndex + 1) % bullets.length;
            updateCarousel(currentIndex);
        }, 5000);
    </script>
</body>
</html>
