<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Carousel</title>
    <link rel="stylesheet" href="/css/coordinator.css">
</head>
<body>
   <div class="content-wrapper">
    <section class = "dashboard-section">
        <nav class="navbar">
            <a href="#" class="navbar-brand">CusaQuest</a>
            <div class="navbar-links">
                <a href="#">Company Listings</a>
                <a href="/all">Statistics</a>
                <a href="#">Excel</a>
                <a href="/logout">Logout</a>
                
            </div>
        </nav>
    </section>
    <h1>COORDINATOR DASHBOARD</h1>
    
  
    <section class = "dashboard-section">
        <div class="company">
            <div class="card">
                <div class="image-container">
                    <img src="/media/cisco.png" alt="Company Image" class="company-image" />
                </div>
                <div class="button-container">
                    <div class="btn view-btn">View</div>
                    <div class="btn delete-btn">Delete</div>
                </div>
            </div>
            <div class="card">
                <div class="image-container">
                    <img src="/media/ibm.jpg" alt="Company Image" class="company-image" />
                </div>
                <div class="button-container">
                    <div class="btn view-btn">View</div>
                    <div class="btn delete-btn">Delete</div>
                </div>
            </div>
            <div class="card">
                <div class="image-container">
                    <img src="/media/ey.png" alt="Company Image" class="company-image" />
                </div>
                <div class="button-container">
                    <div class="btn view-btn">View</div>
                    <div class="btn delete-btn">Delete</div>
                </div>
            </div>
            <div class="card">
                <div class="image-container">
                    <img src="/media/soti.jpg" alt="Company Image" class="company-image" />
                </div>
                <div class="button-container">
                    <div class="btn view-btn">View</div>
                    <div class="btn delete-btn">Delete</div>
                </div>
            </div>
    
        </div>
    </section>

    <section class = "dashboard-section">
        <div class="form-container">
            <form id="jobForm">
                <h2>Add a Company</h2>
                <label for="company">Company Name:</label>
                <input type="text" id="company" required>
                <label for="package">Package Offered:</label>
                <input type="text" id="package" required>
                <label for="role">Job Role:</label>
                <input type="text" id="role" required>
                
            </form>
        </div>
    </section>

    <section class = "dashboard-section">
        <div class="modal" id="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">&times;</span>
                <img id="modalImage" class="modal-image" src="" alt="Modal Image">
                <div class="modal-actions">
                    <button onclick="viewDetails()">View</button>
                    <button onclick="deleteJob()">Delete</button>
                </div>
                <div class="job-details" id="jobDetails">
                    <p id="jobRole"></p>
                    <p id="packageOffered"></p>
                    <p id="interviewDate"></p>
                </div>
            </div>
        </div>
    </section>

    <section class = "dashboard-section">
        <div class="card">
            <img src="/media/image4.jpg" alt="Card Image"> <!-- Add your card image path here -->
            <button onclick="window.location.href='/all'">View Placement Statistics</button>
        </div>
    
       </div>
    </section>
    <section class = "dashboard-section">
        <div class="AutomateExcel">
            <a href = "https://admirable-toffee-1f719d.netlify.app/" class = "btn">Automate Excel</a>
        </div>
    </section>
    <script src="/js/coordinator.js"></script>
</body>
</html>